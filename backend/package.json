{
  "name": "meal-planner-backend",
  "version": "1.0.1",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "check:data": "node scripts/check-json.js",
    "check:data:fix": "node scripts/check-json.js --fix",
    "check:duplicates": "python3 ../scripts/find_recipe_duplicates.py",
    "check:recipes": "node scripts/validate-recipes.js",
    "prestart": "node scripts/check-json.js",
    "start": "node src/index.js",
    "test:security": "node --test test/security-validation.test.js",
    "predev": "node scripts/check-json.js",
    "dev": "nodemon --legacy-watch --ignore 'data/**' src/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^6.16.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  }
}
